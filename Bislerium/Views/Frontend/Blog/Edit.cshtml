@model Bislerium.Models.Blogs
<div id="content-page" class="content-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card position-relative inner-page-bg bg-primary" style="height: 150px;">
                    <div class="inner-page-title">
                        <h3 class="text-white">Edit Blog</h3>
                       
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    
                    <div class="card-body">

                        <form asp-route-id="Id" asp-action="UpdateBlog" asp-controller="Blog" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label class="form-label" for="description">Description</label>
                                <input asp-for="Description" name="description" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="image">New Image</label>
                                <input type="file" name="image" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="image">Existing Image</label>
                                <img src="@Model.Image" class="img-fluid" />
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="button" class="btn bg-danger">Cancel</button>
                        </form>

                    </div>
                </div>
                
                
            </div>
           
        </div>
    </div>
</div>