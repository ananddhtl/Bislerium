<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('.upvote-btn').click(function (e) {
            e.preventDefault();

            var blogId = $(this).data('blog-id'); 
            $.ajax({
                url: '/Vote/UpVote',
                type: 'POST',
                data: { id: blogId },
                success: function (response) {
                  
                    alert(response.message);
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        });
    });

    $(document).ready(function () {
        $('.downvote-btn').click(function (e) {
            e.preventDefault();

            var blogId = $(this).data('blog-id');
            $.ajax({
                url: '/Vote/DownVote',
                type: 'POST',
                data: { id: blogId },
                success: function (response) {

                    alert(response.message);
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        });
    });

    function deleteComment(commentId) {
        if (confirm("Are you sure you want to delete this comment?")) {
            
            $.ajax({
                url: '/Comment/DeleteComment',
                type: 'POST',
                data: { id: commentId },
                success: function (data) {
                    alert('Deleted Successfully');
                    location.reload();
                },
                error: function () {
                    alert('An error occurred while deleting the comment.');
                }
            });
        }
    }

    function openEditModal(commentId, commentText) {
      
        $('#editCommentText').val(commentText);

      
        $('#editCommentModal').data('commentId', commentId);

     
        $('#editCommentModal').modal('show');
    }

    function updateComment() {
        var commentId = $('#editCommentModal').data('commentId');
        var editedCommentText = $('#editCommentText').val();

        
        $.ajax({
            url: '/Comment/UpdateComment',
            type: 'POST',
            data: { id: commentId, commentText: editedCommentText },
            success: function () {
                alert('Comment updated successfully');
               
                location.reload();
            },
            error: function () {
                alert('An error occurred while updating the comment.');
            }
        });
    }

</script>